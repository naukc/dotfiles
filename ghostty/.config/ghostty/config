# ~/.config/ghostty/config

# --- Schriftart ---
font-family = "JetBrainsMono Nerd Font"
font-size = 20
# Ligaturen aktivieren (für ->, != etc.)
font-feature = calt
font-feature = liga

# --- Theme ---
theme = Catppuccin Mocha

# --- Fenster ---
window-decoration = true
macos-titlebar-style = tabs
maximize = true
# Transparenz & Blur
background-opacity = 0.8
background-blur-radius = 20
# Etwas Luft zum Rand (sieht edler aus)
window-padding-x = 6
window-padding-y = 6
# Merkt sich Layouts
window-save-state = always
# Sicherheitsabfrage beim Schließen
confirm-close-surface = true

# --- Cursor & Maus ---
# Block-Cursor (wie in Vim Normal Mode)
cursor-style = block

# Kein Blinken (wie in Vim Normal Mode, meistens)
# Wenn du Blinken magst, setze es auf 'true'
cursor-style-blink = false

# Optional: Damit der Cursor die Textfarbe invertiert (klassischer Terminal-Look)
cursor-invert-fg-bg = true

mouse-hide-while-typing = true
# copy-on-select = true

# --- Keybindings ---

# 1. Splits
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
# Zoom (Split temporär maximieren) - NEU
keybind = super+z=toggle_split_zoom

# 2. Navigation (Vim-Style)
keybind = opt+h=goto_split:left
keybind = opt+j=goto_split:down
keybind = opt+k=goto_split:up
keybind = opt+l=goto_split:right

# 3. Tabs
keybind = super+t=new_tab
keybind = super+w=close_surface
keybind = super+1=goto_tab:1
keybind = super+2=goto_tab:2
keybind = super+3=goto_tab:3
keybind = super+4=goto_tab:4
keybind = super+5=goto_tab:5
# Tab-Wechsel (H/L Style)
keybind = super+shift+h=previous_tab
keybind = super+shift+l=next_tab

# 4. Sonstiges
keybind = super+shift+r=reload_config
keybind = super+enter=toggle_fullscreen
